issn = {20565968},
journal = {Cell Discovery},
keywords = {AID,Cdc2-Cdc13,Rad3-Chk1,S. pombe,bouquet,chromosome,meiosis,meiosisaidaid,telomeres,the LINC complex},
mendeley-tags = {AID,meiosisaidaid},
