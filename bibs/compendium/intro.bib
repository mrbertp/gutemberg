keywords = {Cell division,Cellular atoll,Centrioles,Centrosomes,Germ plasm,Gynogenesis,Tetraploid,Zebrafish,sas-6},
number = {1},
pages = {44--60},
pmid = {17950723},
title = {{The zebrafish maternal-effect gene cellular atoll encodes the centriolar component sas-6 and defects in its paternal function promote whole genome duplication}},
volume = {312},
year = {2007}
}
@article{Zheng2020,
