issn = {0028-0836},
month = {jan},
number = {5794},
pages = {795--823},
title = {{Molecular genetic analysis of fission yeast Schizosaccharomyces pombe}},
url = {http://www.nature.com/articles/289119a0 https://www.nature.com/articles/289119a0 https://linkinghub.elsevier.com/retrieve/pii/007668799194059L},
volume = {289},
