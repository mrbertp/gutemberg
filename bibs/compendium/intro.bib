issn = {1059-1524},
journal = {Molecular Biology of the Cell},
month = {apr},
number = {4},
pages = {1756--1768},
title = {{Ase1p Organizes Antiparallel Microtubule Arrays during Interphase and Mitosis in Fission Yeast}},
url = {https://www.molbiolcell.org/doi/10.1091/mbc.e04-10-0899},
