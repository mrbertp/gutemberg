file = {:C\:/Users/Bert/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Janson et al. - 2007 - Crosslinkers and Motors Organize Dynamic Microtubules to Form Stable Bipolar Arrays in Fission Yeast.pdf:pdf},
