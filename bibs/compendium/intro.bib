journal = {Journal of Cell Biology},
number = {5},
pages = {831--840},
pmid = {15569709},
title = {{Kinetochore-driven formation of kinetochore fibers contributes to spindle assembly during animal mitosis}},
volume = {167},
year = {2004}
}
