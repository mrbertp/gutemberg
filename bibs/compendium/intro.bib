doi = {10.1016/j.cub.2018.04.008},
file = {:C\:/Users/Bert/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Flor-Parra, Iglesias-Romero, Chang - 2018 - The XMAP215 Ortholog Alp14 Promotes Microtubule Nucleation in Fission Yeast(2).pdf:pdf},
